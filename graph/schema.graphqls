# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Author {
  id: Int!
  name: String!
}

type Book {
  id: Int!
  title: String!
  author: Author!
}

type Query {
  authors: [Author!]!
  books: [Book!]
}

input NewAuthor {
  name: String!
}

input NewBook {
  title: String!
  authorName: String!
}

type Mutation {
  createAuthor(input: NewAuthor!): Author!
  createBook(input: NewBook!): Book!
}
